{
    "manifest_version": 2,
    "name": "Unified Docs Switcher",
    "description": "Automatically redirect to documentation versionf for many projects",
    "author": "Doug Harris",
    "version": "1.0.0",
    "background": {
        "scripts": [
            "browser-polyfill.min.js",
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://docs.djangoproject.com/*",
                "https://www.postgresql.org/docs/*",
                "https://docs.python.org/*"
            ],
            "js": [
                "browser-polyfill.min.js",
                "content-script.js"
            ],
            "css": ["doc-switcher.css"]
        }
    ],
    "permissions": [
        "https://docs.djangoproject.com/*",
        "https://www.postgresql.org/docs/*",
        "https://docs.python.org/*",
        "webRequest",
        "webRequestBlocking",
        "storage",
        "activeTab"
    ]
}
